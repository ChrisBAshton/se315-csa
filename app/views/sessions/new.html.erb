<h1><%= I18n.t('sessions.login') %></h1>

<%= form_tag session_path do %>
  <div>
    <%= label_tag 'login', I18n.t('sessions.login') %><br />
    <%= text_field_tag 'login', params[:login], id: 'login-input', autofocus: 'autofocus' %>
  </div>
  <div>
    <%= label_tag 'password', I18n.t('sessions.password') %><br />
    <%= password_field_tag 'password' %><br /><br />
  </div>
  <div>
    <%= submit_tag I18n.t('sessions.login')  %> |
    <%= link_to I18n.t('back'), root_path %>
  </div>
<% end %>

