<h1><%= I18n.t('broadcasts.new') %></h1>

<%= form_for(@broadcast) do |f| %>
    <% if @broadcast.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@broadcast.errors.count, "error") %> <%= I18n.t('misc.errors') %>:</h2>

          <ul>
            <% @broadcast.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <%= hidden_field_tag 'page', @current_page %>

    <div id="broadcast-area" class="main-input-area">
      <p>
        <%= f.text_area :content, cols: "100%", rows: "10",
                        title: I18n.t('broadcasts-instructions.text'), autofocus: 'autofocus' %>
      </p>

      <div id="url-part">
        <%= link_to(I18n.t('broadcasts-instructions.shortens-url'),
                    id: "split-arrow",
                    title: I18n.t('broadcasts-instructions.url-button')) %>
        <%= text_field_tag :shorten_url, nil,
                           title: I18n.t('broadcasts-instructions.url'),
                           size: "50%" %>

      </div>
      <br/>

      <div id="">
        <%= f.submit I18n.t('broadcasts.title'), confirm: I18n.t('broadcasts-instructions.confirm') %> |
        <%= link_to I18n.t('back'), broadcasts_path(page: @current_page) %>
      </div>

    </div>

    <div class="sub-input-area">
      <div class="checkboxes">
        <p>
          <%= radio_button_tag 'feeds[alumni_email]', 'cs-alumni', true, title: I18n.t('broadcasts-instructions.select-general-news') %>
          <%= label_tag 'feeds_alumni_email_alumni', I18n.t('broadcasts-instructions.general-news') %>
        </p>

        <p>
          <%= radio_button_tag 'feeds[alumni_email]', 'cs-alumni-jobs', false, title: I18n.t('broadcasts-instructions.select-general-news') %>
          <%= label_tag 'feeds_alumni_email_alumni-jobs', I18n.t('broadcasts-instructions.jobs-news') %>
        </p>

        <p>
          <%= check_box_tag 'feeds[email]', '1', true, title: I18n.t('broadcasts-instructions.email-feed') %>
          <%= label_tag 'email', I18n.t('broadcasts-instructions.email') %>
        </p>

        <p>
          <%= check_box_tag 'feeds[facebook]', '1', true, title: I18n.t('broadcasts-instructions.facebook-feed') %>
          <%= label_tag 'facebook', I18n.t('broadcasts-instructions.facebook') %>
        </p>

        <p>
          <%= check_box_tag 'feeds[RSS]', '1', true, title: I18n.t('broadcasts-instructions.rss-feed') %>
          <%= label_tag 'RSS', I18n.t('broadcasts-instructions.rss') %>
        </p>

        <p>
          <%= check_box_tag 'feeds[atom]', '1', true, title: I18n.t('broadcasts-instructions.atom-feed') %>
          <%= label_tag 'atom', I18n.t('broadcasts-instructions.atom') %>
        </p>

        <p>
          <%= check_box_tag 'feeds[twitter]', '1', true, title: I18n.t('broadcasts-instructions.twitter-feed') %>
          <%= label_tag 'twitter', I18n.t('broadcasts-instructions.twitter') %>
        </p>

        <%= label_tag 'twitter', '140', id: 'twitter-char-count', title: I18n.t('broadcasts-instructions.twitter-count') %>
      </div>
    </div>

<% end %>